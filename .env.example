# Alpaca API (paper trading)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_PAPER_TRADE=true

# Binance API (crypto trading)
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=true

# Zoya API (halal screening - stocks)
ZOYA_API_KEY=your_zoya_api_key
ZOYA_USE_SANDBOX=false

# CoinGecko API (halal screening - crypto, optional for higher rate limits)
COINGECKO_API_KEY=

# LLM Provider: "ollama", "openai", or "anthropic"
LLM_PROVIDER=ollama
LLM_MODEL=qwen2.5:32b
OLLAMA_HOST=http://localhost:11434

# OpenAI (optional fallback)
OPENAI_API_KEY=your_openai_api_key

# Anthropic (optional fallback)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Stock trading parameters
TRADING_INTERVAL_MINUTES=15
DAILY_RETURN_TARGET=0.01
MAX_POSITION_PCT=0.20
DAILY_LOSS_LIMIT=0.02
MAX_SIMULTANEOUS_POSITIONS=5

# Crypto trading parameters
CRYPTO_TRADING_INTERVAL_SECONDS=60
CRYPTO_PAIRS=["BTCUSDT","ETHUSDT","SOLUSDT","ADAUSDT"]
CRYPTO_MAX_POSITION_PCT=0.25
CRYPTO_DAILY_LOSS_LIMIT=0.03
CRYPTO_DAILY_RETURN_TARGET=0.01
CRYPTO_MAX_SIMULTANEOUS_POSITIONS=4
CRYPTO_MIN_MARKET_CAP=1000000000

# Database
DB_PATH=halal_trader.db

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE_LEVEL=DEBUG
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
